<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lin.s2.board.notice.NoticeMapper">

<!--DAO의 풀패키지 명대신 Mapper로 동일하게 맞춰준다 -->
	
	<select id="getList" resultType="NoticeVO" parameterType="Pager">
		
		select * from 
		
		(select rownum R, N.* from
		
		(select * from notice order by num desc) N )
		
		where R between 1 and 10
	</select>
	
	<select id="getTotalCount" parameterType="Pager" resultType="java.lang.Long">
   			select count(num) from notice
   	</select>
   	
	<select id="getSelect" resultType="NoticeVO" parameterType="BoardVO">
   		select * from notice where num=#{num}
   	</select>
   	
   	<insert id="setInsert" parameterType="BoardVO">
   		insert into notice values(#{num}, #{title}, #{writer},#{contents}, now(), 0)
   	</insert>
   	
</mapper>